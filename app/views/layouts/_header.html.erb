<%# navigation styled for Bootstrap 4.0 %>
<div class="container-fluid">
  <nav class="navbar navbar-expand-lg navbar-light bg-primary row">
    <div class="col-2">
      <%= link_to '/' do %>
        <%= image_tag("logo.png", alt: "logo", class: 'header-logo') %>
      <% end %>
    </div>
    <div class="col-10">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <% if current_user %>
              <li class="nav-link">Bienvenido <%= current_user.name %></li>
              <li><%= link_to 'Cerrar sesión', destroy_user_session_path, method: 'delete', class: 'nav-link' %></li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Iniciar sesión', new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Crear cuenta', new_user_registration_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</div>