<div class="row">
  <%= render 'layouts/menu' %>
  <div class="offset-3 col-7">
    <div class="row mb-4">
      <% if user_signed_in? %>
        <div class="col-7">
          <h3>Tecnología: Javascript</h3>
        </div>
        <div class="offset-3 col-2">
          <%= link_to 'Agregar +', new_foro_path, class: 'btn btn-primary' %>
        </div>
      <% else %>
        <div class="col-12">
          <h3>Tecnología: Javascript</h3>
        </div>
      <% end %>
    </div>
    <div class="jumbotron secondary-jumbotron row">

      <% @questions.each do |question| %>
        <div class="card mb-3 w-100">
          <%= link_to foro_path(question.id) do %>
            <div class="card-body">
              <%= question.question_name %>
            </div>
          <% end %>
        </div>
      <% end %>
      

    </div>
  </div>
  <div class="col-2">
    <div class="position-fixed">
      <%= image_tag("Publicidad.png", :alt => "banner foro", class: '') %>
    </div>
  </div>
</div>