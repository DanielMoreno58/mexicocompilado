<div class="sign-up-image">
  <div>
    <div class="container sign-up-card">
      <h2>Crear cuenta</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="field row">
          <%= f.label :name, 'Nombre: ', class:'col-4' %>
          <%= f.text_field :name, placeholder: 'Jonh Doe' , autofocus: true, autocomplete: "email", class: 'col-7' %>
        </div>

        <div class="field row">
          <%= f.label :email, 'Correo electrónico: ', class:'col-4' %>
          <%= f.email_field :email, placeholder: 'jonh@doe.com' , autofocus: true, autocomplete: "email", class: 'col-7' %>
        </div>

        <div class="field row">
          <%= f.label :password, 'Contraseña: ', class:'col-4' %>
          <%= f.password_field :password, placeholder: '******', autocomplete: "new-password", class:'col-7' %>
        </div>

        <div class="field row">
          <%= f.label :password_confirmation, 'Confirmar contraseña: ', class: 'col-4' %>
          <%= f.password_field :password_confirmation, placeholder: '******', autocomplete: "new-password", class: 'col-7' %>
        </div>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="sign-up-buttons row">
          <div class="actions col-12">
            <%= f.submit "Crear cuenta", class: 'btn btn-primary' %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
